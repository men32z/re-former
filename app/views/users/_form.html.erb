<%= form_with model: @user, local: true do |f| %>

  <%= render 'shared/errors' %>

  <%= f.label :username, "Your User Name Here" %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "example@example.com"  %>
  <br>
  <%= f.label :password_digest, "password" %>
  <%= f.password_field :password_digest %>
  <br>
  <%= f.label :password_digest_confirmation, "password confirmation" %>
  <%= f.password_field :password_digest_confirmation %>
  <br>
  <%= f.submit "create" %>
<% end %>